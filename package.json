{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "A RESTful backend service for managing personal and shared expenses, budgets, and financial reports.",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias",
    "prepare": "husky install"
  },
  "keywords": [
    "expense-tracker",
    "budgeting",
    "finance",
    "rest-api",
    "nodejs",
    "express"
  ],
  "author": "Md Iqbal Hossain",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "mongoose": "^8.15.0",
    "multer": "^2.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.21",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
